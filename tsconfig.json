{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "sourceMap": true,
    "paths": {
      "@/": [
        "src/*"
      ],
      "got": ["./node_modules/got/dist/source"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true
  }
}